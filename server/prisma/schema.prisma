// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model TransactionsTypes {
  id                  Int    @id @default(autoincrement())
  description         String
  natureOfTransaction String
  Sale                Sale[]
}

model Sale {
  id        String   @id @default(uuid())
  productId String
  price     Int
  sellerId  String
  date      DateTime
  typeId    Int

  transaction TransactionsTypes @relation(fields: [typeId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  product     Product           @relation(fields: [productId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  seller      Seller            @relation(fields: [sellerId], references: [id], onDelete: Cascade, onUpdate: Cascade)
}

model Product {
  id   String @id @default(uuid())
  name String @unique
  Sale Sale[]
}

model Seller {
  id   String @id @default(uuid())
  name String @unique
  type String
  Sale Sale[]
}
